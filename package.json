{
  "name": "public-react",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.1.0"
  },
  "dependencies": {
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts": "1.1.4"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-roc": "^0.1.0",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.2"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ --include-path ./node_modules src/styles/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ --include-path ./node_modules src/styles/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "lint-js": "eslint --config=./.eslintrc.json src",
    "lint-css": "stylelint stylelint '**/*.scss'",
    "lint": "npm-run-all lint-js lint-css",
    "eject": "react-scripts eject"
  }
}
